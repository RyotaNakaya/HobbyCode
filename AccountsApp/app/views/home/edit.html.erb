<h1>家計簿アプリ試作品(修正画面)</h1>
<div class="main-content">
    <div class="card">
        <div class="card-header bg-warning">■修正</div>
        <div class="card-body">
            <div class="create-data-area form-group">
                <%= form_for(@postdata, url:{controller:"home", action:"update"}) do |form| %>
                <div class="form-group form-inline">
                    <label class="create-data-area-label">カテゴリ</label>
                    <%= form.select :category, [["食費", "食費"], ["日用雑貨", "日用雑貨"], ["交通費", "交通費"], ["交際費", "交際費"], ["エンタメ", "エンタメ"], ["その他", "その他"]], {},  class: "form-control"  %>
                </div>
                <div class="form-group form-inline">
                    <label class="create-data-area-label">金額</label>
                    <%= form.number_field :amount, :class => "form-control" %>
                </div>
                <div class="form-group form-inline">
                    <label class="create-data-area-label">日付</label>
                    <%= form.date_field :date, :class => "form-control" %>
                </div>
                <div class="form-group form-inline">
                    <label class="create-data-area-label">備考</label>
                    <%= form.text_field :remark, :class => "form-control" %>
                </div>
                <div class="form-group form-inline">
                    <label class="create-data-area-label"></label>
                    <%= form.submit "保存する", :class => "btn btn-primary" %>
                    <button class="update-cancel btn btn-danger">キャンセル</button>
                </div>
                <% end %>
            </div>
        </div>
    </div>