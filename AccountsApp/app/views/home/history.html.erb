<div class="container">
    <h1>家計簿アプリ試作品(ヒストリー画面)</h1>
    <div class="main-content">
        <div>■履歴</div>
        <table class="table table-bordered">
            <tr class="history-area-header">
                <th>日付</th>
                <th>カテゴリ</th>
                <th>サブカテゴリ</th>
                <th>金額</th>
                <th>備考</th>
                <th></th>
            </tr>
            <% @allpostdata.each do |obj|%>
            <tr>
                <td class="history-data-date">
                    <%= obj.date.strftime("%Y-%m-%d") %>
                </td>
                <td class="history-data-category">
                    <%= obj.category != nil ? obj.category_id : "none" %>
                </td>
                <td class="history-data-sub-category">
                    <%= obj.category != nil ? obj.category.ctg_name : "none" %>
                </td>
                <td class="history-data-amount">
                    <%= obj.amount %>
                </td>
                <td class="history-data-remark">
                    <%= obj.remark %>
                </td>
                <td><button val="<%= obj.id %>" class="edit-data btn btn-outline-primary btn-sm" style="margin-right: 16px">編集する</button><button
                        val="<%= obj.id %>" class="del-data btn btn-outline-danger btn-sm">削除する</button>
                </td>
            </tr>
            <% end %>
        </table>
    </div>
</div>